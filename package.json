{
	"name": "surround-with-csharp",
	"icon": "images/logo.png",
	"displayName": "surround-with-csharp",
	"description": "Brings support of surround-with functionality to vscode for C#. Inspiration comes from similar functionality from Visual Studio.",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/NikiforovAll/surround-with-csharp.git"
	},
	"markdown": "github",
	"galleryBanner": {
		"color": "#512BD4",
		"theme": "dark"
	},
	"keywords": [
		"surround",
		"c#",
		"csharp",
		"wrap",
		"selection",
		"code blocks",
		"snippet"
	],
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Snippets",
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands":[
			{
				"command": "surround.with",
				"title": "C# Surround: Surround With",
				"enablement": "editorHasSelection",
				"icon": "\\${symbol-snippet}"
			}
		],
		"keybindings": [
			{
				"command": "surround.with",
				"key": "ctrl+shift+S ctrl+shift+S",
				"when": "editorHasSelection"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
